{
  "manifest_version": 3,
  "name": "Abrir en archive.ph",
  "description": "Añade una opción al menú contextual para archivar enlaces en archive.ph",
  "version": "1.0",
  "permissions": ["contextMenus", "tabs"],
  "background": { "service_worker": "background.js" },

  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "128": "icons/icon128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
